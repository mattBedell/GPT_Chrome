{
  "parserOptions": {
    "ecmaVersion": 9,
    "ecmaFeatures":{
      "jsx": true
    },
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
    "no-unused-expressions": ["error", { "allowTaggedTemplates": true }],
    "max-len": [1, 150, 2],
    "no-underscore-dangle": "off"
  },
  "globals": {
    "chrome": false,
    "window": false,
    "googletag": true,
    "document": false,
    "__webpack_hash__": false
  },
  "extends": ["airbnb-base"]
}
