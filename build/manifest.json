{
    "manifest_version": 2,

    "name": "GPT Chrome",
    "description": "GPT Helper",
    "version": "1.0",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "persistant": false,
        "scripts": ["bg.js"]
    },
    "content_scripts":[{
        "matches":["http://*/*", "https://*/*"],
        "js": ["script.js"]
    }],
    "web_accessible_resources": ["inject_script.js"],
    "permissions": [
        "activeTab"
    ]
}